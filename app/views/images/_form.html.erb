<%= simple_form_for @image, html:{class: 'mx-auto w-75'} do |form| %>
  <%= form.error_notification %>

  <%= form.input :url, label: 'Image URL:' %>

  <%= form.input :tag_list, label: 'Tags', input_html: {value: @image.tag_list.join(', ')} %>

  <%= form.button :submit, class: 'btn btn-primary' %>
<% end %>
