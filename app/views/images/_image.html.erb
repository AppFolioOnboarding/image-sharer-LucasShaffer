<div class="card w-75 align-self-center my-2 js-image-card">
  <img src="<%= img.url %>" class="card-img-top" alt="...">
  <div class="card-body" id="js-card-body">
    <ul class="list-inline" id="js-tag-list">
      <% img.tag_list.each do |tag| %>
        <li class="list-inline-item" id="js-image-tag"><a href="<%= images_path filter: tag %>"><%= tag %></a><%= ', ' unless tag == img.tag_list.last %></li>
      <% end %>
    </ul>
    <div class="d-flex justify-content-between">
      <% if current_page? root_path or images_path %>
        <%= button_to 'View Image', image_path(img), method: :get, class: 'btn btn-primary', id: 'js-view-button' %>
      <% end %>
      <%= button_to 'Edit Image', edit_image_path(img), method: :get, class: 'btn btn-success', id: 'js-edit-button' %>
      <%= button_to 'Delete Image', image_path(img), method: :delete, data: {confirm: 'Are you sure you want to delete this image?'}, class: 'btn btn-danger', id: 'js-delete-button' %>
    </div>
  </div>
</div>
